{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "paths": {
      "@modules/*": ["modules/*"],
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@root/*": ["./*"]
    }
  },
  "include": ["src/**/*"]
}
